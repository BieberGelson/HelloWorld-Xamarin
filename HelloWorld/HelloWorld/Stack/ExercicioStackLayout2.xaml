<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.ExercicioStackLayout2">

    <StackLayout>
        <Label Text="nyc_photographer"/>
        
        <StackLayout Padding="0,20,0,0">
            <Image Source="http://lorempixel.com/1920/1080/nature/3/"/>
        </StackLayout>
        
        <StackLayout Orientation="Horizontal" Padding="20" Spacing="20">
            <Label Text="Like" TextColor="Blue"/>
            <Label Text="Comment" TextColor="Blue"/>
            <Label Text="Share" TextColor="Blue"/>
        </StackLayout>

        <BoxView Color="#f0f0f0" HeightRequest="1"/>
        <Label Text="700 likes" FontAttributes="Bold" TextColor="Black" FontSize="Large" />
        <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of works in Denmark" TextColor="Gray" FontSize="Medium" />

    </StackLayout>

</ContentPage>